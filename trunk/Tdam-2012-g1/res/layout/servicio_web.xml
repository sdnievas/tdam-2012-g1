<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textVServicioWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtServicioWeb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textVNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtVNombre" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textVDestinatario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtVDestinatario" />

        <EditText
            android:id="@+id/txtDestinatario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.31"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textVMensaje"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:text="@string/txtVMensaje" />

        <EditText
            android:id="@+id/txtMensaje"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_weight="0.40"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:text="@string/txtEnviar" />

    </LinearLayout>

</LinearLayout>